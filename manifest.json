{
  "name": "Chirpy",
  "description": "Reveal the show quotes button",
  "version": "1.2.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "chirpy.png"
  },
  "permissions": ["tabs"],
  "host_permissions": ["https://twitter.com/*", "https://x.com/*"],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
